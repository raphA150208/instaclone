<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @favorite.present? %>
      <% @favorite.each do |favorite| %>
        <tr>
          <td><%= favorite.picture.user.name %></td>
          <td><%= favorite.picture.content %></td>
          <td><%= image_tag favorite.picture.image.url if favorite.picture.image.url.present? %></td>
        </tr>
      <% end %>
      <%= link_to "お気に入り解除", favorite_path(id: @favorite.id), method: :delete, class: "btn btn-danger" %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "マイページ", user_path(current_user.id) %>
