<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @favorite_list.present? %>
      <% @favorite_list.each do |favorite_list| %>
        <tr>
          <td><%= favorite_list.picture.user.name %></td>
          <td><%= favorite_list.picture.content %></td>
          <td><%= image_tag favorite_list.picture.image.url if favorite_list.picture.image.url.present? %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "投稿一覧", pictures_path %>
<%= link_to "新規投稿", new_picture_path %>
